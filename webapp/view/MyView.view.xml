<mvc:View xmlns:core="sap.ui.core" controllerName="MyApp_shiv.controller.MyController" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox>
		<f:SimpleForm
			layout="ResponsiveGridLayout"
			title="Demo" >
			<f:content>
				<Label text="{i18n>firstValue}" />
				<Input id="value1" value="{/field1}" />
				<Label text="{i18n>secondValue}" />
				<Input id="value2" value="{/field2}" />
				<Label text="Operator" />
				<Select selectedKey="{/operator}" items="{/possibleOperations}" >
					<items>
						<core:Item key="{id}" text="{value}"/>
					</items>
				</Select>				
				<Label text="{i18n>answer}" />
				<Text text="{/output}"/>
			</f:content>
		</f:SimpleForm>
        <Button text="{i18n>calculate}" press=".calculate"/>		
    </VBox>
</mvc:View>